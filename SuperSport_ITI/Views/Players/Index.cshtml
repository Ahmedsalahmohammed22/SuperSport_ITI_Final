@model IEnumerable<Player>


@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center">Players</h1>


<div class="d-flex justify-content-between mb-2">
    <a asp-action="CreateView" class="btn btn-success">Create New</a>
    <form method="get" asp-controller="Players" asp-action="IndexPlayers">
        <div class="input-group rounded-2">
            <input type="text" class="border-1 p-2 rounded-2" placeholder="search by Name..." name="search" value="@ViewBag.Search" />
            <button type="submit" class="btn btn-secondary input-group-append"><i class="bi bi-search"></i></button>
        </div>
    </form>
</div>
<div class="player bg-secondary shadow p-3 mb-5 rounded bg-opacity-75">
    <table class="table-warning table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerPosition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.team.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayerPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlayerNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.team.Name)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ImagePath)" style="max-width:100px; height:100px" class="img-fluid">
                </td>
                <td>
                        <a asp-action="GetEditView" class="btn btn-outline-primary" asp-route-id="@item.Id"><i class="bi bi-pencil-square me-2"></i>Edit</a> 
                        <a asp-action="DetailsPlayer" class="btn btn-outline-warning" asp-route-id="@item.Id"><i class="bi bi-list-ul me-2"></i>Details</a> 
                        <a asp-action="GetDeleteView" class="btn btn-outline-danger" asp-route-id="@item.Id"><i class="bi bi-trash me-2"></i>Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="row">

        @foreach(var player in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card mt-2">
                    <img src="@player.ImagePath" class="img-fluid" alt="player" style="margin:0 auto ; display:block ; height:200px">
                    <div class="card-body">
                        <h5 class="card-title">@player.PlayerName</h5>
                        <p class="card-text">@player.PlayerPosition</p>
                        <p class="card-text">@player.team.Name</p>

                        <a asp-action="DetailsPlayer" asp-route-id="@player.Id" class="btn btn-primary mt-2">Show Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
