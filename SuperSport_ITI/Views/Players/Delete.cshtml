@model Player

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete @Model.PlayerName</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <partial name="_playerData" />
    
    <form asp-action="DeleteCurrent" asp-controller="Players" method="Post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="IndexPlayers" class="btn btn-secondary">Back to List</a>
    </form>
</div>
