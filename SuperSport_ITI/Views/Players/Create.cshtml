@model Player


<h1 class = "alert alert-success text-center">Create Player</h1>


<div class="row">
    <img class="card col-6 rounded ms-2" src="" id="playerImage" style="object-fit:contain" />

    <div class="col-md-4">
        <form asp-action="CreatePlayer" asp-controller="Players" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerPosition" class="control-label"></label>
                <input asp-for="PlayerPosition" class="form-control" />
                <span asp-validation-for="PlayerPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerNationality" class="control-label"></label>
                <input asp-for="PlayerNationality" class="form-control" />
                <span asp-validation-for="PlayerNationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerNumber" class="control-label"></label>
                <input asp-for="PlayerNumber" class="form-control" />
                <span asp-validation-for="PlayerNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDatePlayer" class="control-label"></label>
                <input asp-for="BirthDatePlayer" class="form-control" />
                <span asp-validation-for="BirthDatePlayer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" accept=".jpg , .png" type="file" name="imgFileForm"
                       id="imgFileForm" onchange="setImgUrl()" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" asp-items=@(new SelectList(ViewBag.AllTeams , "Id" , "Name")) class="form-control">
                    <option selected disabled>Select.....</option>
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="IndexPlayers" asp-controller = "Players" class="btn btn-secondary mt-2">Back to List</a>
</div>

@section Scripts {
    <script>
        function setImgUrl(){
            document.getElementById("playerImage").src = window.URL.createObjectURL(document.getElementById("imgFileForm").files[0])
        }
    </script>
}
