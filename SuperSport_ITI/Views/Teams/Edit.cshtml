@model Team

<h1 class="text-center">Edit @Model.Name</h1>

<div class="row bg-success bg-opacity-25 shadow rounded-2 p-3 mb-5">

    <form class="col-md-4" method="post" asp-action="EditTeam" asp-controller="Teams" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImagePath" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TeamNationality" class="control-label"></label>
            <input type="text" asp-for="TeamNationality" class="form-control" />
            <span asp-validation-for="TeamNationality" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EstablishmentDate" class="control-label"></label>
            <input asp-for="EstablishmentDate" class="form-control" />
            <span asp-validation-for="EstablishmentDate" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="ImagePath"></label>
            <input asp-for="ImagePath" type="file" name="imageFormFile" id="imageFormFile" accept=".png , .jpg" class="form-control" onchange="SetImgUrl()" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Save</button>
    </form>
    <img class="col-5 card" src="@Model.ImagePath" id="teamImages" style="object-fit:contain" />
</div>
<div>
    <a asp-controller="Teams" class="btn btn-primary" asp-action="IndexTeam">Back to List</a>
</div>
@section Scripts{
    <script>
        function SetImgUrl() {
            document.getElementById("teamImages").src = window.URL.createObjectURL(document.getElementById("imageFormFile").files[0]);
        }
    </script>
}