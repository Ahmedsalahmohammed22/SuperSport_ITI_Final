@model Team;

<h1 class="text-center">Delete @Model.Name</h1>

<h3 class="alert alert-warning">Are you sure you want to delete this?</h3>

<div>
    <partial name="_teamData" />
    <form method="post" asp-action="DeleteTeam" asp-controller="Teams">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger" type="submit">Delete</button> |
        <a asp-controller="Teams" asp-action="IndexTeam" class="btn btn-secondary">Back to List</a>
    </form>
</div>